{
  "compilerOptions": {
    "target": "es5",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin",
        "alwaysShowRuleFailuresAsWarnings": false,
        "ignoreDefinitionFiles": false,
      }
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}
